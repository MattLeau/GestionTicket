{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projets list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomprojet</th>
                <th>Entreprise</th>
                <th>Chef</th>
                <th>Datefin</th>
                <th>Datedebut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td><a href="{{ path('projets_show', { 'id': projet.id }) }}">{{ projet.id }}</a></td>
                <td>{{ projet.nomProjet }}</td>
                <td>{{ projet.entreprise }}</td>
                <td>{{ projet.chef }}</td>
                <td>{% if projet.dateFin %}{{ projet.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ projet.dateDebut }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('projets_show', { 'id': projet.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('projets_edit', { 'id': projet.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('projets_new') }}">Create a new projet</a>
        </li>
    </ul>
{% endblock %}
