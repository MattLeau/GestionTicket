                <td>
                    <ul>
                        <li>
                            <a href="{{ path('taches_show', { 'id': tach.id }) }}">{{ "show" | trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('taches_edit', { 'id': tach.id }) }}">{{ "edit" | trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
