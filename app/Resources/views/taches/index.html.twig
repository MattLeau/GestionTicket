{% extends 'base.html.twig' %}

{% block body %}
    <h1>Taches list</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Projet</th>
                <th>Evolution</th>
                <th>Affectation</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tach in taches %}
            <tr>
                <td><a href="{{ path('taches_show', { 'id': tach.id }) }}">{{ tach.id }}</a></td>
                <td>{{ tach.projet }}</td>
                <td>{{ tach.evolution }}</td>
                <td>{{ tach.affectation }}</td>
                <td>{{ tach.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('taches_show', { 'id': tach.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('taches_edit', { 'id': tach.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <form method="post" action="{{ path('taches_tachesProjet') }}">
        <p>Cr√©er un filtre : <input type="text" name="projet" value="Evolution"/><input type="submit" value="Envoyer" /></p>
    </form>
    <ul>
        <li>
            <a href="{{ path('taches_stats') }}">Statistiques </a>
        </li>
        <li>
            <a href="{{ path('taches_new') }}">Create a new tach</a>
        </li>
    </ul>
{% endblock %}
