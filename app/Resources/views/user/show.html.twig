{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ "User" | trans }}</h1>

    <table>
        <tbody>
            <tr>
                <th>{{ "Id" | trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ "Nom" | trans }}</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>{{ "Prenom" | trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ "Role" | trans }}</th>
                <td>{{ user.roles[0] }}</td>
            </tr>
            <tr>
                <th>{{ "Mdp" | trans }}</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">{{ "Back to the list" | trans }}</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': user.id }) }}">{{ "Edit" | trans }}</a>
        </li>

        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="{{ 'Delete' | trans }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
